{
  "info": {
    "name": "E-Commerce REST Checklist (auth-jwt) [project-fixed]",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3001" },
    { "key": "emailAlice", "value": "alice@example.com" },
    { "key": "password", "value": "password" },
    { "key": "tokenAlice", "value": "" }
  ],
  "item": [
    {
      "name": "1) Login (Alice) -> set tokenAlice",
      "request": {
        "method": "POST",
        "header": [{ "key": "content-type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"{{emailAlice}}\",\"password\":\"{{password}}\"}",
          "options": { "raw": { "language": "json" } }
        },
        "url": "{{baseUrl}}/api/v1/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('login returns accessToken', () => {",
              "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "  const json = pm.response.json();",
              "  pm.expect(json).to.have.property('data');",
              "  pm.expect(json.data).to.have.property('accessToken');",
              "  pm.collectionVariables.set('tokenAlice', json.data.accessToken);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "2) GET /auth/me (no token) -> 401",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/v1/auth/me"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('unauthorized', () => {",
              "  pm.expect(pm.response.code).to.eql(401);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "3) GET /auth/me (Alice token) -> 200",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{tokenAlice}}" }
        ],
        "url": "{{baseUrl}}/api/v1/auth/me"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('me returns user identity', () => {",
              "  pm.expect(pm.response.code).to.eql(200);",
              "  const json = pm.response.json();",
              "  pm.expect(json).to.have.property('data');",
              "  pm.expect(json.data).to.have.property('sub');",
              "  pm.expect(json.data).to.have.property('email');",
              "  pm.expect(json.data.email).to.eql(pm.collectionVariables.get('emailAlice'));",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "4) Login (wrong password) -> 401",
      "request": {
        "method": "POST",
        "header": [{ "key": "content-type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"{{emailAlice}}\",\"password\":\"wrong\"}",
          "options": { "raw": { "language": "json" } }
        },
        "url": "{{baseUrl}}/api/v1/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('invalid credentials', () => {",
              "  pm.expect(pm.response.code).to.eql(401);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}
