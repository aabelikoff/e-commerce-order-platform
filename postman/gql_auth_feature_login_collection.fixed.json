{
  "info": {
    "name": "E-Commerce GraphQL Checklist (graphql-auth-dataloader) [fixed]",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3001" },
    { "key": "emailAlice", "value": "alice@example.com" },
    { "key": "emailBob", "value": "bob@example.com" },
    { "key": "emailAdmin", "value": "admin@example.com" },
    { "key": "password", "value": "password" },
    { "key": "tokenAlice", "value": "" },
    { "key": "tokenAdmin", "value": "" }
  ],
  "item": [
    {
      "name": "1) Login (Alice) -> set tokenAlice",
      "request": {
        "method": "POST",
        "header": [{ "key": "content-type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"{{emailAlice}}\",\"password\":\"{{password}}\"}",
          "options": { "raw": { "language": "json" } }
        },
        "url": "{{baseUrl}}/api/v1/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('login returns accessToken', () => {",
              "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "  const json = pm.response.json();",
              "  pm.expect(json).to.have.property('data');",
              "  pm.expect(json.data).to.have.property('accessToken');",
              "  pm.collectionVariables.set('tokenAlice', json.data.accessToken);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "2) Login (Admin) -> set tokenAdmin",
      "request": {
        "method": "POST",
        "header": [{ "key": "content-type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"{{emailAdmin}}\",\"password\":\"{{password}}\"}",
          "options": { "raw": { "language": "json" } }
        },
        "url": "{{baseUrl}}/api/v1/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('login returns accessToken', () => {",
              "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "  const json = pm.response.json();",
              "  pm.expect(json).to.have.property('data');",
              "  pm.expect(json.data).to.have.property('accessToken');",
              "  pm.collectionVariables.set('tokenAdmin', json.data.accessToken);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "3) GraphQL orders (no token) -> UNAUTHENTICATED",
      "request": {
        "method": "POST",
        "header": [{ "key": "content-type", "value": "application/json" }],
        "body": {
          "mode": "graphql",
          "graphql": {
            "query": "query Orders($filter: OrdersFilterInput, $pagination: PaginationCursorInput) { orders(filter: $filter, pagination: $pagination) { nodes { id status totalAmount createdAt items { quantity product { id name price } } } pageInfo { hasNextPage endCursor } totalCount } }",
            "variables": "{\"filter\": {\"status\": \"PENDING\", \"dateFrom\": \"2026-02-12T00:00:00.000Z\"},\"pagination\": {\"limit\": 20}}"
          }
        },
        "url": "{{baseUrl}}/graphql"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('unauthenticated (GraphQL error)', () => {",
              "  pm.expect(pm.response.code).to.eql(200);",
              "  const json = pm.response.json();",
              "  pm.expect(json).to.have.property('errors');",
              "  pm.expect(json.errors).to.be.an('array').that.is.not.empty;",
              "  pm.expect(json.errors[0].extensions.code).to.eql('UNAUTHENTICATED');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "4) GraphQL orders (Alice) -> only own orders",
      "request": {
        "method": "POST",
        "header": [
          { "key": "content-type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{tokenAlice}}" }
        ],
        "body": {
          "mode": "graphql",
          "graphql": {
            "query": "query Orders($filter: OrdersFilterInput, $pagination: PaginationCursorInput) { orders(filter: $filter, pagination: $pagination) { nodes { id status totalAmount createdAt user { email } items { id quantity product { id name } } payments { id status } } pageInfo { hasNextPage endCursor } totalCount } }",
            "variables": "{\"pagination\": {\"limit\": 10}}"
          }
        },
        "url": "{{baseUrl}}/graphql"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('alice sees only her orders', () => {",
              "  pm.expect(pm.response.code).to.eql(200);",
              "  const json = pm.response.json();",
              "  pm.expect(json).to.have.property('data');",
              "  pm.expect(json.data).to.have.property('orders');",
              "  const orders = json.data?.orders?.nodes ?? [];",
              "  pm.expect(orders).to.be.an('array').that.is.not.empty;",
              "  const emailAlice = pm.collectionVariables.get('emailAlice');",
              "  for (const o of orders) {",
              "    pm.expect(o.user?.email).to.eql(emailAlice);",
              "  }",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "5) GraphQL orders (Admin) -> can see multiple users",
      "request": {
        "method": "POST",
        "header": [
          { "key": "content-type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{tokenAdmin}}" }
        ],
        "body": {
          "mode": "graphql",
          "graphql": {
            "query": "query Orders($filter: OrdersFilterInput, $pagination: PaginationCursorInput) { orders(filter: $filter, pagination: $pagination) { nodes { id user { email } } pageInfo { hasNextPage endCursor } totalCount } }",
            "variables": "{\"pagination\": {\"limit\": 20}}"
          }
        },
        "url": "{{baseUrl}}/graphql"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('admin sees multiple users', () => {",
              "  pm.expect(pm.response.code).to.eql(200);",
              "  const json = pm.response.json();",
              "  const orders = json.data?.orders?.nodes ?? [];",
              "  pm.expect(orders).to.be.an('array').that.is.not.empty;",
              "  const emails = [...new Set(orders.map((o) => o.user?.email).filter(Boolean))];",
              "  pm.expect(emails.length).to.be.at.least(2);",
              "  pm.expect(emails).to.include(pm.collectionVariables.get('emailAlice'));",
              "});"
            ]
          }
        }
      ]
    }
  ]
}
