{
  "info": {
    "name": "E-Commerce REST Checklist (role-guards) [fixed]",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3001" },
    { "key": "emailUser", "value": "alice@example.com" },
    { "key": "emailAdmin", "value": "admin@example.com" },
    { "key": "password", "value": "password" },
    { "key": "tokenUser", "value": "" },
    { "key": "tokenAdmin", "value": "" },
    {
      "key": "nonexistentOrderId",
      "value": "33333333-3333-3333-3333-333333333333"
    }
  ],
  "item": [
    {
      "name": "1) Login (User) -> set tokenUser",
      "request": {
        "method": "POST",
        "header": [{ "key": "content-type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"{{emailUser}}\",\"password\":\"{{password}}\"}",
          "options": { "raw": { "language": "json" } }
        },
        "url": "{{baseUrl}}/api/v1/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('login returns accessToken', () => {",
              "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "  const json = pm.response.json();",
              "  pm.expect(json.data).to.have.property('accessToken');",
              "  pm.collectionVariables.set('tokenUser', json.data.accessToken);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "2) GET /orders (no token) -> 401",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/v1/orders"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('unauthorized', () => {",
              "  pm.expect(pm.response.code).to.eql(401);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "3) GET /orders (User token) -> 200",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{tokenUser}}" }],
        "url": "{{baseUrl}}/api/v1/orders"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('orders list returns array', () => {",
              "  pm.expect(pm.response.code).to.eql(200);",
              "  const json = pm.response.json();",
              "  pm.expect(json.data).to.be.an('array');",
              "  pm.expect(json.data.length).to.be.at.least(1);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "4) DELETE /orders/:id (User token) -> 403 (RBAC)",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{tokenUser}}" }],
        "url": "{{baseUrl}}/api/v1/orders/{{nonexistentOrderId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('forbidden for non-admin', () => {",
              "  pm.expect(pm.response.code).to.eql(403);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "5) Login (Admin) -> set tokenAdmin",
      "request": {
        "method": "POST",
        "header": [{ "key": "content-type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"{{emailAdmin}}\",\"password\":\"{{password}}\"}",
          "options": { "raw": { "language": "json" } }
        },
        "url": "{{baseUrl}}/api/v1/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('login returns accessToken', () => {",
              "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "  const json = pm.response.json();",
              "  pm.expect(json.data).to.have.property('accessToken');",
              "  pm.collectionVariables.set('tokenAdmin', json.data.accessToken);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "6) DELETE /orders/:id (Admin token) -> 404 (guard passed)",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{tokenAdmin}}" }
        ],
        "url": "{{baseUrl}}/api/v1/orders/{{nonexistentOrderId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('admin can call endpoint (not forbidden)', () => {",
              "  pm.expect(pm.response.code).to.eql(404);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}
